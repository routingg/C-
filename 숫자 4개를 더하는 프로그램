/*p. 66 예제 1번*/

#define _CRT_SECURE_NO_WARNNIGS

#include <stdio.h>

void main()
{

int a,b,c,d;
int result;

printf("첫 번째 계산할 값을 입력하세요 ==> \n");
scanf("%d", &a);

printf("두 번째 계산할 값을 입력하세요 ==> \n");
scanf("%d", &b);

printf("세 번째 계산할 값을 입력하세요 ==> \n");
scanf("%d", &c);

printf("네 번째 계산할 값을 입력하세요 ==> \n");
scanf("%d", &d);

result = a+b+c+d;

printf("%d+%d+%d+%d = %d", a, b, c, d, result);

}
